[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ project_description }}"
readme = "README.md"
license = "{{ license }}"
requires-python = ">={{ python_version }}"
authors = [
    { name = "{{ author_name }}", email = "{{ author_email }}" },
]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
{%- if license == "MIT" %}
    "License :: OSI Approved :: MIT License",
{%- elif license == "Apache-2.0" %}
    "License :: OSI Approved :: Apache Software License",
{%- elif license == "GPL-3.0" %}
    "License :: OSI Approved :: GNU General Public License v3 (GPLv3)",
{%- elif license == "BSD-3-Clause" %}
    "License :: OSI Approved :: BSD License",
{%- elif license == "ISC" %}
    "License :: OSI Approved :: ISC License (ISCL)",
{%- endif %}
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
{%- for version in python_versions_matrix.split(',') %}
    "Programming Language :: Python :: {{ version.strip() }}",
{%- endfor %}
    "Typing :: Typed",
]
keywords = []
dependencies = [
{%- if include_cli %}
    "typer>=0.12.0",
{%- endif %}
]

[dependency-groups]
dev = [
    "pytest>=9.0.0",
    "pytest-cov>=7.0.0",
    "ruff>=0.14.14",
    "ty>=0.0.14",
    "hatch>=1.16.3",
{%- if include_prek %}
    "prek>=0.1.0",
{%- endif %}
]
{%- if include_docs %}
docs = [
    "mkdocs>=1.6.0",
    "mkdocs-material>=9.7.0",
    "mkdocstrings-python>=2.0.1",
]
{%- endif %}

[project.urls]
Homepage = "https://github.com/{{ github_username }}/{{ repository_name }}"
Documentation = "https://{{ github_username }}.github.io/{{ repository_name }}"
Repository = "https://github.com/{{ github_username }}/{{ repository_name }}"
Issues = "https://github.com/{{ github_username }}/{{ repository_name }}/issues"
Changelog = "https://github.com/{{ github_username }}/{{ repository_name }}/blob/main/CHANGELOG.md"

{%- if include_cli %}

[project.scripts]
{{ project_slug }} = "{{ project_slug }}.cli:app"
{%- endif %}

# =============================================================================
# Hatch
# =============================================================================

[tool.hatch.build.targets.sdist]
include = [
    "/src",
]

[tool.hatch.build.targets.wheel]
packages = ["src/{{ project_slug }}"]

# Matrix testing across Python versions
[tool.hatch.envs.test]

[[tool.hatch.envs.test.matrix]]
python = [{% for v in python_versions_matrix.split(',') %}"{{ v.strip() }}"{% if not loop.last %}, {% endif %}{% endfor %}]

# =============================================================================
# Ruff
# =============================================================================

[tool.ruff]
target-version = "py{{ python_version | replace('.', '') }}"
line-length = 88
src = ["src", "tests"]

[tool.ruff.lint]
select = [
    "E",      # pycodestyle errors
    "W",      # pycodestyle warnings
    "F",      # Pyflakes
    "I",      # isort
    "B",      # flake8-bugbear
    "C4",     # flake8-comprehensions
    "UP",     # pyupgrade
    "ARG",    # flake8-unused-arguments
    "SIM",    # flake8-simplify
    "TCH",    # flake8-type-checking
    "PTH",    # flake8-use-pathlib
    "ERA",    # eradicate
    "RUF",    # Ruff-specific rules
]

[tool.ruff.lint.isort]
known-first-party = ["{{ project_slug }}"]

[tool.ruff.lint.per-file-ignores]
"tests/**/*.py" = ["ARG001"]

# =============================================================================
# ty (Astral type checker)
# =============================================================================

[tool.ty.src]
include = ["**/*.py"]

# =============================================================================
# Pytest
# =============================================================================

[tool.pytest.ini_options]
testpaths = ["tests"]
pythonpath = ["src"]
addopts = [
    "-ra",
    "-q",
    "--strict-markers",
    "--strict-config",
]
markers = [
    "slow: marks tests as slow (deselect with '-m \"not slow\"')",
]

# =============================================================================
# Coverage
# =============================================================================

[tool.coverage.run]
source = ["src/{{ project_slug }}"]
branch = true
parallel = true

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "raise AssertionError",
    "raise NotImplementedError",
    "if __name__ == .__main__.:",
    "if TYPE_CHECKING:",
    "@abstractmethod",
]
show_missing = true

# =============================================================================
# git-cliff (Changelog generation)
# =============================================================================

[tool.git-cliff]
config = "cliff.toml"

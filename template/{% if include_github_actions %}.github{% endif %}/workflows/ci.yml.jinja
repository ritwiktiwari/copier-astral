name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

concurrency:
  group: {% raw %}${{ github.workflow }}-${{ github.ref }}{% endraw %}
  cancel-in-progress: true

env:
  FORCE_COLOR: "1"

jobs:
  lint:
    name: Lint
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          enable-cache: true

      - name: Set up Python
        run: uv python install {{ python_version }}

      - name: Install dependencies
        run: make install

      - name: Lint and format check
        run: make lint format-check

  type-check:
    name: Type Check
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          enable-cache: true

      - name: Set up Python
        run: uv python install {{ python_version }}

      - name: Install dependencies
        run: make install

      - name: Run ty type checker
        run: make type-check

  test:
    name: Test (Python {% raw %}${{ matrix.python-version }}{% endraw %})
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        python-version: [{% for v in python_versions_matrix.split(',') %}"{{ v.strip() }}"{% if not loop.last %}, {% endif %}{% endfor %}]

    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          enable-cache: true

      - name: Set up Python {% raw %}${{ matrix.python-version }}{% endraw %}
        run: uv python install {% raw %}${{ matrix.python-version }}{% endraw %}

      - name: Install dependencies
        run: make install

      - name: Run tests with coverage
        run: make test-cov

{%- if include_codecov %}

      - name: Upload coverage to Codecov
        uses: codecov/codecov-action@v4
        with:
          token: {% raw %}${{ secrets.CODECOV_TOKEN }}{% endraw %}
          files: ./coverage.xml
          fail_ci_if_error: false
{%- endif %}

{%- if include_security_scanning %}

  secrets_and_dependency_scan:
    name: Secret and Dependency Scan
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: Run Gitleaks
        uses: gitleaks/gitleaks-action@v2.3.9
        env:
          GITHUB_TOKEN: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
      - uses: astral-sh/setup-uv@v5
      - run: make install
      - run: make pysentry

  sast_with_semgrep:
    name: semgrep scan
    runs-on: ubuntu-latest
    container:
      image: semgrep/semgrep

    # Skip any PRs created by dependabot or renovate to avoid permission issues:
    if: {% raw %}${{ github.actor != 'dependabot[bot]' && github.actor != 'dependabot-preview[bot]' && github.actor != 'Renovate[bot]' }}{% endraw %}

    steps:
      - uses: actions/checkout@v4
      - run: semgrep scan
{%- endif %}
